@model SearchLibrary.Models.QueryResponse
@{
    ViewBag.Title = "Home Page";
}
<Style>
    em {
        color: orange;
    }
</Style>
<div class="">
    <h1>SOLR Application</h1>
    <hr />
</div>

<div class="row">
    <div class="col-md-3">
        <h4>Statistics</h4>
        <hr/>
        <p>
          Total Found : @Model.TotalHits
        </p>
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm())
        {
            <div class="input-group">
                <input name="searchText" type="text" class="form-control" autofocus="true" placeholder="Search for..." value="@ViewBag.SearchText">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Go!</button>
                </span>
            </div>
            <hr/>
            <div class="row">
                @if (Model.Result.Count > 0)
                {
                    foreach (var course in Model.Result)
                     {
                         <div class="col-md-12">
                             <strong>@Html.Raw(course.CourseTitle)</strong> <br/>
                             <p>
                               @Html.Raw(course.Description)
                             </p>
                             <hr/>
                         </div>
                     }
                    <hr/>
                    <div class=col-md-12>
                        Total Found : @Model.TotalHits
                    </div>
                }
               
           
            </div>
        }
    </div>
</div>